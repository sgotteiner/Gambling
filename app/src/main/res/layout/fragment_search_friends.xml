<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sagi.gambling.fragments.SearchFriendsFragment">

    <EditText
        android:id="@+id/edtSearchFriends"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:hint="Search"
        android:singleLine="true" />

    <ImageView
        android:id="@+id/imageViewDone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/not_free_done"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="28dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/edtSearchFriends"
        android:layout_marginTop="5dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerTags"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</RelativeLayout>
